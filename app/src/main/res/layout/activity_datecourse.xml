<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C1D9EF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:background="#9BC2E5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumbarunpenr"
            android:text = "오늘의 감성스팟 ㅇㅅㅇ"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textColor="#000000" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:background="#9BC2E5"
            android:scaleType="centerInside"
            android:src="@drawable/teacher"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/restaurant"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumbarunpenr"
                android:text="이름 : 르브리에 \n‎위치 : 서울특별시 종로구 팔판동 57\n맛있는 브런치와 조용한 분위기로 하루의 여유를 느낄 수 있는 식당\n가격 : 플레이트당 13000원 선"
                android:textColor="#000000"
                android:textSize="13dp" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/museaum"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumbarunpenr"
                android:text="이름 : 국립현대미술관 서울관 \n‎위치 : 서울특별시 종로구 삼청로 30\n실내감성에 추위 순삭, 일상에 힐링을 PLUS할 수 있는 장소\n가격 : 60세 이상, 24세 이하, 대학생 관람무료  입장료2000원"
                android:textColor="#000000"
                android:textSize="13dp" />


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/gwanggyo"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumbarunpenr"
                android:text="이름 : 광교호수공원 \n‎위치 : 경기 수원시 영통구 광교호수로\n센트럴파크 느낌 물씬, 야경 명소로 인기. 호수주변으로 브런치 레스토랑이나 식당이 많아 하루 데이트 코스로 적합\n가격 : 주차 3시간 이내 1000원"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:textSize="13dp" />
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/floating"
                android:layout_width="330dp"
                android:layout_height="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nanumbarunpenr"
                android:text="이름 : 플로팅 \n‎위치 : 서울 특별시 중구 충무로 2가 62-12번지, L7호텔 19층\n이렇게 추워도 루프탑갈 수 있다며? 따뜻한 풋스파와 감성저격 서울 야경. 올해 연말 분위기는 무.적.권 보장 \n가격 : 안주 2-3 만원대, 바틀가격은 주류별 상이"
                android:textColor="#000000"
                android:layout_marginBottom="30dp"
                android:textSize="13dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>